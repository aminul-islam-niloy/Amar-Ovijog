@model AmarOvijog.Models.Complaint

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card p-4 rounded border">
                <h3 class="text-info mb-4 text-center">Complaint Details</h3>

                <div class="form-group">
                    <label>Title:</label>
                    <p class="form-control-static">@Model.Title</p>
                </div>

                <div class="form-group">
                    <label>Description:</label>
                    <p class="form-control-static">@Model.Description</p>
                </div>

                <div class="form-group">
                    <label>Division:</label>
                    <p class="form-control-static">@ViewBag.DivisionName</p>
                </div>

                <div class="form-group">
                    <label>District:</label>
                    <p class="form-control-static">@ViewBag.DistrictName</p>
                </div>

                <div class="form-group">
                    <label>Upazila:</label>
                    <p class="form-control-static">@ViewBag.UpazilaName</p>
                </div>

                <div class="form-group">
                    <label>Union:</label>
                    <p class="form-control-static">@ViewBag.UnionName</p>
                </div>

                <div class="form-group">
                    <label>Uploaded Images:</label>
                    <div class="d-flex flex-wrap mt-2">
                        @if (Model.ComplaintImages != null && Model.ComplaintImages.Any())
                        {
                            foreach (var image in Model.ComplaintImages)
                            {
                                <div class="m-2">
                                    <img src="@Url.Content(image.ImageUrl)" alt="Complaint Image" class="img-thumbnail" style="height: 150px; width: 150px; object-fit: cover;" />
                                </div>
                            }
                        }
                        else
                        {
                            <p>No images uploaded.</p>
                        }
                    </div>
                </div>

                <div class="form-group text-right mt-4">
                    <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
